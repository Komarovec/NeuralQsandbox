#:kivy 1.0

<CanvasWindow>:
    mainActionBar: mainActionBar
    levelEditActionBar: levelEditActionBar

    ActionBar:
        id: levelEditActionBar
        pos_hint: {'top':1}

        ActionView:
            use_separator: True
            ActionPrevious:
                important: True
                text: 'Game menu'
                on_press: 
                    root.add_widget(mainActionBar)
            ActionOverflow:
            ActionButton:
                text: 'Add Barrier'
                on_press:
                    root.game.addObject("barrier")
            ActionButton:
                text: 'Move'
                on_press:
                    root.game.moveObject = True
            ActionButton:
                text: 'Delete'
                on_press:
                    root.game.deleteObject = True

    ActionBar:
        id: mainActionBar
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                important: True
                text: 'Mainmenu'
                on_press: 
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'mainmenu'
            ActionOverflow:
            ActionButton:
                text: 'Reset'
                on_press: 
                    root.reset()
            ActionButton:
                text: 'Level Editor'
                on_press:
                    root.remove_widget(mainActionBar)