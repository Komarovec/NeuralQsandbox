#:kivy 1.0

<MainMenuWindow>:
    GridLayout:
        cols: 3
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'pic.png'

        GridLayout:
            rows: 4
            padding: root.width/100
            spacing: root.height/50

            canvas:
                Color:
                    rgba: 0, 0, 0, 0.6
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: "SandBox!"
                font_size: (root.width + root.height) / 100
                on_press: 
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'canvas'
            Button:
                text: "Options"
                font_size: (root.width + root.height) / 100
                on_press: 
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'options'
            Button:
                text: "Exit"
                font_size: (root.width + root.height) / 100
                on_press: app.stop() 
        Label:
            text: ""
        Label:
            text: ""